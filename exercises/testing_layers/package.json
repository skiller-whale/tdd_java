{
  "name": "testing-layers-java",
  "private": true,
  "scripts": {
    "test:unit:core": "mvn test -Dtest=**/core/*Test",
    "test:server": "mvn test -Dtest=**/*ControllerTest",
    "test:system": "mvn test -Dtest=**/integration/*Test",
    "test:all:watch": "run-run-run --watch-dir=src --watch-file-extensions=java 'npm run test:unit:core' 'npm run test:server' 'npm run test:system'"
  },
  "devDependencies": {
    "@nowprototypeit/run-run-run": "github:nowprototypeit/run-run-run#f429f4d",
    "playwright": "^1.40.0"
  }
}
